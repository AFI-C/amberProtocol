<form>
    <p>
        <label>Titulo</label>
        <input type="text" class="form-control" name="title" required placeholder="Titulo">
    </p>
    <p>
        <label>Estatus</label>
        <input type="text" class="form-control" name="status" required>
    </p>

    <p>
        <label>Fuente</label>
        <select name = "source" class="form-control" required>
            <%
            if (deps.length > 0 ){
            for (var i =0; i < deps.length; i++){
            %>
            <option value="<%= deps[i].id %>"> <%= deps[i].nombre %> </option>
            <%
            }
            }else {
            %>
            <option value="">Ninguna</option>
            <% }%>
        </select>
    </p>

    <p>
        <label>Tipo de alerta</label>
        <input type="text" class="form-control" name="msgtype">
    </p>

    <p>
        <button class="btn btn-primary" type="submit">Registrar</button>
    </p>

</form>